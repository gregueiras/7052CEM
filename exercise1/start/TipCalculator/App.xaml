<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipCalculator.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style
                x:Key="baseLabelStyle"
                TargetType="Label">
                <Setter
                    Property="FontSize"
                    Value="22" />
            </Style>
            <Style
                x:Key="infoLabelStyle"
                TargetType="Label"
                BasedOn="{StaticResource baseLabelStyle}">
                <Setter
                    Property="FontAttributes"
                    Value="Bold" />
            </Style>
            <Color
                x:Key="bgColor">#c0c0c0
            </Color>
            <Color
                x:Key="fgColor">#606060
            </Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>